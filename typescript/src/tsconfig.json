{
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "resolveJsonModule": true,
        "allowJs": false,
        "removeComments": true,
        "esModuleInterop": false,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "downlevelIteration": true,
        "strict": false,
        "declaration": true
    },
    "exclude": [
        "./dist/**/*",
        "./source/",
        "./src",
        "./js-docs/",
        "./docs/",
        "./webpack.config.js",
        "./tests/",
        "toml-nodejs/"
    ]
}
